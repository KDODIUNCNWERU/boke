    "steps": [
        {
            "stepNo": 1,
            "content": "食材",
            "imageUrl": "http://pic.daydaycook.com/production/ImageMigration/384x288/recipe_content_15541_item_0.jpg",
            "languageId": null
        },
        {
            "stepNo": 2,
            "content": "燈籠椒和洋蔥切成小塊",
            "imageUrl": "http://pic.daydaycook.com/production/ImageMigration/384x288/recipe_content_15541_item_1.jpg",
            "languageId": null
        },
        {
            "stepNo": 3,
            "content": " 用刀背拍牛仔骨的雙面嫩化牛肉",
            "imageUrl": "http://pic.daydaycook.com/production/ImageMigration/384x288/recipe_content_15561_item_0.jpg",
            "languageId": null
        },
        {
            "stepNo": 4,
            "content": "然後醃製10分鐘",
            "imageUrl": "http://pic.daydaycook.com/production/ImageMigration/384x288/recipe_content_15561_item_1.jpg",
            "languageId": null
        },
        {
            "stepNo": 5,
            "content": "在油鑊內高火加熱適量油，加入牛仔骨煎至邊緣金黃",
            "imageUrl": "http://pic.daydaycook.com/production/ImageMigration/384x288/recipe_content_15571_item_0.jpg",
            "languageId": null
        },
        {
            "stepNo": 6,
            "content": "加入燈籠椒和洋蔥，翻炒3分鐘然後起鍋",
            "imageUrl": "http://pic.daydaycook.com/production/ImageMigration/384x288/recipe_content_15571_item_1.jpg",
            "languageId": null
        },
        {
            "stepNo": 7,
            "content": "加入番茄醬，鹽和糖",
            "imageUrl": "http://pic.daydaycook.com/production/ImageMigration/384x288/recipe_content_15581_item_0.jpg",
            "languageId": null
        },
        {
            "stepNo": 8,
            "content": "然後倒入水混合均勻",
            "imageUrl": "http://pic.daydaycook.com/production/ImageMigration/384x288/recipe_content_15581_item_1.jpg",
            "languageId": null
        },
        {
            "stepNo": 9,
            "content": "加入牛仔骨和蔬菜徹底翻炒",
            "imageUrl": "http://pic.daydaycook.com/production/ImageMigration/384x288/recipe_content_15591_item_0.jpg",
            "languageId": null
        },
        {
            "stepNo": 10,
            "content": "即成",
